{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "dom",
            "ES2018",
            "ES2019",
            "ES2020",
        ],
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
    },
    "exclude": [ "node_modules", "**/*.spec.ts", "**/*.test.ts" ],
    "include": [ "src", "index.d.ts" ],
}